<%= form_for(order) do |form| %>
  <% if order.errors.any? %>
    <%= render "form_errors/form_errors", model_object: order %>
  <% end %>
  <div class="field">
    <%= form.label :name, t('.name') %>
    <%= form.text_field :name, size: 40 %>
  </div>
  <div class="field">
    <%= form.label :address, t('.address_html') %>
    <%= form.text_area :address, rows: 3, cols: 40 %>
  </div>
  <div class="field">
    <%= form.label :email, t('.email') %>
    <%= form.email_field :email, size: 40 %>
  </div>
  <div class="field">
    <%= form.label :pay_type, t('.pay_type') %>
    <%= form.select :pay_type, Order.pay_types.keys, prompt: 'Select a payment method'%>
  </div>
  <div class="actions">
    <%= form.submit t('.submit') %>
  </div>
<% end %>
