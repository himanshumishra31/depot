<h1>Hi <%= @order.name %></h1>
<h2>Order#received</h2>
<% if @order.line_items.present? %>
  <table border="1">
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Discount Price</th>
      <th>Quantity</th>
      <th>Image</th>
    </tr>
    </tr>
    <% @order.line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.product.title %></td>
        <td><%= line_item.product.price %></td>
        <td><%= line_item.product.discount_price %></td>
        <td><%= line_item.quantity %></td>
        <td><%= image_tag attachments[line_item.product.image_url].url, height: '20px', width: '20px' %></td>
      </tr>
    <% end %>
  </table>
  <p><strong>Total Amount: <%= @order.total_price %></strong></p>
<% else %>
  <h5> No Items present in Order</h5>
<% end %>
